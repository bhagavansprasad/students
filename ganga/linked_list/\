#include <stdio.h>
#include "defs.h"
#include "stdlib.h"

struct node *header = NULL;
main()
{
	//insert_at_front(4);
	//display();
	addnode(5);
	addnode(6);
	addnode(7);
	display();
	//delete_by_val(7);	
	//display();
	//insert_at_end(9);
	//display();
	insert_by_pos(8,2);
	display();
	//orderded_insert(8);
	//display();
}

int addnode(int n)
{
	struct node *temp = NULL, *new = NULL;
	new = (struct node *)malloc(sizeof(struct node));

	new->num = n;
	new->next = NULL;

	if(header == NULL)
	{
		header = new;
		return; 
	}

	for(temp = header; temp->next != NULL; temp = temp->next);
	temp->next = new;

	return 0;
}

int insert_at_front(int n)
{
	struct node *temp = NULL, *new;
	new = (struct node*)malloc(sizeof(struct node));

	new -> num = n;
	new->next = NULL;

	if(header == NULL)
	{
		header = new;
		return;
	}
}

int insert_at_end(int n)
{
	struct node *temp = NULL, *new;
	new = (struct node*)malloc(sizeof(struct node));

	new -> num = n;
	new -> next = NULL;

	for(temp = header ; temp != NULL; temp = temp->next)
	{
		if(temp -> next == NULL)
		{
			temp -> next = new;
			return;
		}
	}
}

int insert_by_pos(int n, int pos)
{
	int i;
	struct node *temp = NULL, *new;
	new = (struct node*)malloc(sizeof(struct node));

	for(temp = header ; temp -> next != NULL; i = 1, temp = temp->next, i++)
	{
		if(i == pos)
		{
			new -> num = n;
			new -> next = header;
			header = new;
		}

		if(i == pos - 1)
		{
			new -> num = n;
			new -> next = temp -> next;
			temp -> next = new;
		}
	}
}

int orderded_insert(int n)
{
	struct node *temp, *new;
	new = (struct node*)malloc(sizeof(struct node));

	new -> num = n;
	new -> next = NULL;

	if(header == NULL)
	{
		header = new;
		return;
	}

	for(temp = header ; temp -> next != NULL; temp = temp->next)
	{
		if(temp -> num > new -> num && temp == header)
		{
			new -> next = header;
			header = new;
		}

		if(temp -> num > new -> num && new -> num < temp -> num) 
		{
			new = temp -> next;
			temp -> next = new;
		}
	}

	temp -> next = new;
}

int delete_by_val(int n)
{
	struct node *temp = NULL, *prev = NULL;

	for(temp = header; temp != NULL; prev = temp, temp = temp->next)
	{
		if(temp -> num == n)
		{
			if(temp == header)
			{
				header = temp -> next;
				return;
			}

			else
			{
				prev->next = temp->next;
				return;
			}
		}
	}
}

int display()
{
	struct node *temp = NULL;

	for(temp = header; temp != NULL; temp = temp->next)
	{
		printf("%d\n", temp->num);
	}
}
